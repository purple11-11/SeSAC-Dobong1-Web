<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>실습 axios post 로그인</title>
    <style>
      .result {
        font-size: 1.5rem;
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <h2>실습 axios POST 로그인</h2>
    <form name="login">
      <label for="id">id : </label>
      <input type="text" id="id" name="id" />

      <label for="pw">password : </label>
      <input type="password" id="pw" name="pw" />

      <button type="button" onclick="loginBtn()">로그인</button>

      <div class="result"></div>
    </form>

    <script>
      const resultBox = document.querySelector(".result");

      async function loginBtn() {
        const form = document.forms["login"];
        const data = {
          id: form.id.value,
          pw: form.pw.value,
        };

        if (!form.id.value) {
          resultBox.textContent = "id를 입력해주세요";
        } else if (!form.pw.value) {
          resultBox.textContent = "password를 입력해주세요";
        } else {
          try {
            const res = await axios({
              method: "post",
              url: "/login",
              data: data,
            });
            console.log("res.data: ", res.data);

            if (res.data) {
              resultBox.textContent = "로그인 성공😎";
              resultBox.style.color = "blue";
            } else {
              resultBox.textContent = "로그인 실패😥";
              resultBox.style.color = "red";
            }
          } catch (err) {
            console.log(err);
          }
        }
      }
    </script>
  </body>
</html>
